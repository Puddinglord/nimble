{
  "debug": false,
  "spacing": 12,
  "padding": [20, 20, 20, 20],
  "footer": true,
  "images": true,
  "views": [
    {
      "type": "text",
      "value": "{{name|uppercase}}",
      "style": "title3",
      "weight": "black",
      "alignment": "center",
      "bgColor": "black",
      "color": "white",
      "padding": [8, 12]
    },
    {
      "type": "text",
      "value": "Level {{data.level|default: '1'}} {{data.ancestry.name|default: 'Unknown'}} {{data.class.name|default: 'Unknown'}}",
      "style": "subheadline",
      "alignment": "center"
    },
    {
      "type": "divider",
      "height": 2,
      "bgColor": "black"
    },
    {
      "type": "hStack",
      "spacing": 8,
      "distribution": "fillEqually",
      "views": [
        {
          "type": "vStack",
          "spacing": 2,
          "alignment": "center",
          "padding": [6, 8],
          "borderColor": "black",
          "borderWidth": 1,
          "views": [
            {
              "type": "text",
              "value": "STR",
              "style": "caption2",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.abilities.str.score|default: '10'}}",
              "style": "body",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.abilities.str.modifier|default: '0'|signed}}",
              "style": "caption"
            }
          ]
        },
        {
          "type": "vStack",
          "spacing": 2,
          "alignment": "center",
          "padding": [6, 8],
          "borderColor": "black",
          "borderWidth": 1,
          "views": [
            {
              "type": "text",
              "value": "DEX",
              "style": "caption2",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.abilities.dex.score|default: '10'}}",
              "style": "body",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.abilities.dex.modifier|default: '0'|signed}}",
              "style": "caption"
            }
          ]
        },
        {
          "type": "vStack",
          "spacing": 2,
          "alignment": "center",
          "padding": [6, 8],
          "borderColor": "black",
          "borderWidth": 1,
          "views": [
            {
              "type": "text",
              "value": "INT",
              "style": "caption2",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.abilities.int.score|default: '10'}}",
              "style": "body",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.abilities.int.modifier|default: '0'|signed}}",
              "style": "caption"
            }
          ]
        },
        {
          "type": "vStack",
          "spacing": 2,
          "alignment": "center",
          "padding": [6, 8],
          "borderColor": "black",
          "borderWidth": 1,
          "views": [
            {
              "type": "text",
              "value": "WIL",
              "style": "caption2",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.abilities.wil.score|default: '10'}}",
              "style": "body",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.abilities.wil.modifier|default: '0'|signed}}",
              "style": "caption"
            }
          ]
        }
      ]
    },
    {
      "type": "hStack",
      "spacing": 12,
      "views": [
        {
          "type": "vStack",
          "spacing": 2,
          "alignment": "center",
          "padding": [8, 16],
          "bgColor": "black",
          "views": [
            {
              "type": "text",
              "value": "HP",
              "style": "caption2",
              "weight": "bold",
              "color": "white"
            },
            {
              "type": "text",
              "value": "{{data.hp.current|default: '0'}}/{{data.hp.max|default: '0'}}",
              "style": "headline",
              "weight": "bold",
              "color": "white"
            }
          ]
        },
        {
          "type": "vStack",
          "spacing": 2,
          "alignment": "center",
          "padding": [8, 16],
          "borderColor": "black",
          "borderWidth": 1,
          "views": [
            {
              "type": "text",
              "value": "DEF",
              "style": "caption2",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.defense|default: '10'}}",
              "style": "headline",
              "weight": "bold"
            }
          ]
        },
        {
          "type": "vStack",
          "spacing": 2,
          "alignment": "center",
          "padding": [8, 16],
          "borderColor": "black",
          "borderWidth": 1,
          "views": [
            {
              "type": "text",
              "value": "SPEED",
              "style": "caption2",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.movement.walk|default: '30'}}",
              "style": "headline",
              "weight": "bold"
            }
          ]
        },
        {
          "type": "spacer"
        },
        {
          "type": "vStack",
          "spacing": 2,
          "alignment": "center",
          "padding": [8, 16],
          "borderColor": "black",
          "borderWidth": 1,
          "views": [
            {
              "type": "text",
              "value": "WOUNDS",
              "style": "caption2",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.wounds|default: '0'}}/6",
              "style": "headline",
              "weight": "bold"
            }
          ]
        }
      ]
    },
    {
      "type": "hStack",
      "spacing": 12,
      "visibleIf": "data.mana.max > 0",
      "views": [
        {
          "type": "vStack",
          "spacing": 2,
          "alignment": "center",
          "padding": [8, 16],
          "borderColor": "black",
          "borderWidth": 1,
          "views": [
            {
              "type": "text",
              "value": "MANA",
              "style": "caption2",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.mana.current|default: '0'}}/{{data.mana.max|default: '0'}}",
              "style": "headline",
              "weight": "bold"
            }
          ]
        },
        {
          "type": "vStack",
          "spacing": 2,
          "alignment": "center",
          "padding": [8, 16],
          "borderColor": "black",
          "borderWidth": 1,
          "views": [
            {
              "type": "text",
              "value": "HIT DICE",
              "style": "caption2",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.hitDice.current|default: '0'}}/{{data.hitDice.max|default: '0'}} ({{data.hitDie|default: 'd8'}})",
              "style": "headline",
              "weight": "bold"
            }
          ]
        }
      ]
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black"
    },
    {
      "type": "text",
      "value": "SKILLS",
      "style": "caption",
      "weight": "black"
    },
    {
      "type": "include",
      "path": "partials/skills.md"
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "data.attacks.size > 0"
    },
    {
      "type": "text",
      "value": "ATTACKS",
      "style": "caption",
      "weight": "black",
      "visibleIf": "data.attacks.size > 0"
    },
    {
      "type": "forEach",
      "data": "data.attacks",
      "views": [
        {
          "type": "text",
          "value": "**{{item.name}}** {{item.attackBonus|signed}} ({{item.damage}} {{item.damageType}})",
          "style": "body"
        }
      ]
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "data.talents.size > 0"
    },
    {
      "type": "text",
      "value": "TALENTS",
      "style": "caption",
      "weight": "black",
      "visibleIf": "data.talents.size > 0"
    },
    {
      "type": "forEach",
      "data": "data.talents",
      "views": [
        {
          "type": "text",
          "value": "**{{item.name}}** {{item.description}}",
          "style": "body"
        }
      ]
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "data.spells.size > 0"
    },
    {
      "type": "text",
      "value": "SPELLS",
      "style": "caption",
      "weight": "black",
      "visibleIf": "data.spells.size > 0"
    },
    {
      "type": "forEach",
      "data": "data.spells",
      "views": [
        {
          "type": "text",
          "value": "**{{item.name}}** ({{item.tier}}) – {{item.manaCost}} mana",
          "style": "body"
        }
      ]
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "data.gear.size > 0"
    },
    {
      "type": "text",
      "value": "GEAR",
      "style": "caption",
      "weight": "black",
      "visibleIf": "data.gear.size > 0"
    },
    {
      "type": "forEach",
      "data": "data.gear",
      "views": [
        {
          "type": "text",
          "value": "{{item.name}}{% if item.quantity > 1 %} (×{{item.quantity}}){% endif %}",
          "style": "body"
        }
      ]
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "descr != ''"
    },
    {
      "type": "text",
      "value": "{{descr}}",
      "style": "body",
      "visibleIf": "descr != ''"
    },
    {
      "type": "image",
      "value": "{{image}}",
      "link": "{{image}}",
      "visibleIf": "image != ''"
    },
    {
      "type": "tags",
      "attribute": "tags"
    }
  ]
}
