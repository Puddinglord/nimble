{
  "debug": false,
  "spacing": 12,
  "padding": [20, 20, 20, 20],
  "footer": true,
  "images": true,
  "views": [
    {
      "type": "text",
      "value": "{{name|uppercase}}",
      "style": "title3",
      "weight": "black",
      "alignment": "center",
      "bgColor": "black",
      "color": "white",
      "padding": [8, 12]
    },
    {
      "type": "text",
      "value": "{{data.tier|default: 'Cantrip'}} {{data.school|default: 'Spell'}}",
      "style": "subheadline",
      "alignment": "center"
    },
    {
      "type": "include",
      "path": "partials/spell.md"
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black"
    },
    {
      "type": "text",
      "value": "{{descr}}",
      "style": "body",
      "visibleIf": "descr != ''"
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "data.canUpcast == true"
    },
    {
      "type": "text",
      "value": "UPCAST",
      "style": "caption",
      "weight": "black",
      "visibleIf": "data.canUpcast == true"
    },
    {
      "type": "text",
      "value": "{{data.upcastEffect}}",
      "style": "body",
      "visibleIf": "data.canUpcast == true"
    },
    {
      "type": "text",
      "value": "{{notes}}",
      "style": "caption",
      "visibleIf": "notes != ''"
    },
    {
      "type": "image",
      "value": "{{image}}",
      "link": "{{image}}",
      "visibleIf": "image != ''"
    },
    {
      "type": "tags",
      "attribute": "tags"
    }
  ]
}
