{
  "spacing": 0,
  "views": [
    {
      "type": "vStack",
      "spacing": 8,
      "padding": [16, 16, 16, 16],
      "bgColor": "#F5F1E8",
      "views": [
        {
          "type": "hStack",
          "spacing": 8,
          "alignment": "top",
          "views": [
            {
              "type": "text",
              "value": "{{name}}",
              "style": "title",
              "weight": "bold"
            },
            {
              "type": "spacer"
            },
            {
              "type": "label",
              "value": "{{data.cr|default: '1'}}",
              "style": "body",
              "weight": "bold",
              "bgColor": "#2B2622",
              "color": "#F5F1E8",
              "padding": [6, 10, 6, 10],
              "borderRadius": 4
            },
            {
              "type": "label",
              "value": "{{data.hp.max|default: '0'}}",
              "style": "body",
              "weight": "bold",
              "bgColor": "#4E1B0E",
              "color": "#F5F1E8",
              "padding": [6, 10, 6, 10],
              "borderRadius": 4
            }
          ]
        },
        {
          "type": "text",
          "value": "{{data.type|map: 'MonsterType'}}{% if data.size %}, {{data.size|map: 'Size'}}{% endif %}",
          "style": "body",
          "weight": "semibold",
          "color": "#3d2817"
        },
        {
          "type": "divider",
          "height": 2,
          "bgColor": "#2B2622"
        },
        {
          "type": "text",
          "value": "{{descr}}",
          "style": "body",
          "color": "#3d2817",
          "visibleIf": "descr != ''"
        },
        {
          "type": "text",
          "value": "**STR** {{data.abilities.str|default: '0'|signed}} • **DEX** {{data.abilities.dex|default: '0'|signed}} • **INT** {{data.abilities.int|default: '0'|signed}} • **WIL** {{data.abilities.wil|default: '0'|signed}}",
          "style": "body",
          "weight": "medium",
          "color": "#2B2622"
        },
        {
          "type": "divider",
          "height": 1.5,
          "bgColor": "#3d2817",
          "visibleIf": "data.traits != ''"
        },
        {
          "type": "text",
          "value": "{{data.traits}}",
          "style": "body",
          "color": "#3d2817",
          "visibleIf": "data.traits != ''"
        },
        {
          "type": "divider",
          "height": 1.5,
          "bgColor": "#3d2817",
          "visibleIf": "data.actions != ''"
        },
        {
          "type": "vStack",
          "spacing": 4,
          "visibleIf": "data.actions != ''",
          "views": [
            {
              "type": "text",
              "value": "**ACTIONS:** After each hero's turn, choose 1:",
              "style": "body",
              "weight": "bold",
              "color": "#2B2622"
            },
            {
              "type": "text",
              "value": "{{data.actions}}",
              "style": "body",
              "color": "#3d2817"
            }
          ]
        },
        {
          "type": "divider",
          "height": 1.5,
          "bgColor": "#3d2817",
          "visibleIf": "data.legendary.actions != ''"
        },
        {
          "type": "vStack",
          "spacing": 4,
          "visibleIf": "data.legendary.actions != ''",
          "views": [
            {
              "type": "text",
              "value": "**LAST STAND:**",
              "style": "body",
              "weight": "bold",
              "color": "#2B2622"
            },
            {
              "type": "text",
              "value": "At 0 HP {{name}} {{data.legendary.actions}}",
              "style": "body",
              "color": "#3d2817"
            }
          ]
        },
        {
          "type": "image",
          "value": "{{image}}",
          "link": "{{image}}",
          "borderRadius": 8,
          "visibleIf": "image != ''"
        }
      ]
    }
  ]
}
