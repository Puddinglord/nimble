{
  "debug": false,
  "spacing": 12,
  "padding": [20, 20, 20, 20],
  "footer": true,
  "images": true,
  "views": [
    {
      "type": "text",
      "value": "{{name|uppercase}}",
      "style": "title3",
      "weight": "black",
      "alignment": "center",
      "bgColor": "black",
      "color": "white",
      "padding": [8, 12]
    },
    {
      "type": "text",
      "value": "{{data.shortDescription}}",
      "style": "subheadline",
      "alignment": "center",
      "visibleIf": "data.shortDescription != ''"
    },
    {
      "type": "text",
      "value": "{% include \"monster.md\" %}"
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "data.traits"
    },
    {
      "type": "text",
      "value": "TRAITS",
      "style": "caption",
      "weight": "black",
      "visibleIf": "data.traits"
    },
    {
      "type": "text",
      "value": "{{data.traits}}",
      "style": "body",
      "visibleIf": "data.traits"
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "data.actions"
    },
    {
      "type": "text",
      "value": "ACTIONS",
      "style": "caption",
      "weight": "black",
      "visibleIf": "data.actions"
    },
    {
      "type": "text",
      "value": "{% for action in data.actions %}**{{action.name}}.** {{action.text}}\n\n{% endfor %}",
      "style": "body",
      "visibleIf": "data.actions"
    },

    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "data.isLegendary == true"
    },
    {
      "type": "text",
      "value": "LEGENDARY",
      "style": "caption",
      "weight": "black",
      "visibleIf": "data.isLegendary == true"
    },
    {
      "type": "text",
      "value": "**Saves** {{data.saves}}",
      "style": "body",
      "visibleIf": "data.isLegendary == true and data.saves != ''"
    },
    {
      "type": "text",
      "value": "{% for action in data.legendaryActions %}**{{action.name}}.** {{action.text}}\n\n{% endfor %}",
      "style": "body",
      "visibleIf": "data.isLegendary == true"
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "data.isLegendary == true and data.bloodied.abilities != ''"
    },
    {
      "type": "text",
      "value": "BLOODIED ({{data.bloodied.threshold|default: 'half HP'}})",
      "style": "caption",
      "weight": "black",
      "visibleIf": "data.isLegendary == true and data.bloodied.abilities != ''"
    },
    {
      "type": "text",
      "value": "{{data.bloodied.abilities}}",
      "style": "body",
      "visibleIf": "data.isLegendary == true and data.bloodied.abilities != ''"
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "data.isLegendary == true and data.lastStand.hp > 0"
    },
    {
      "type": "text",
      "value": "LAST STAND ({{data.lastStand.hp}} HP)",
      "style": "caption",
      "weight": "black",
      "visibleIf": "data.isLegendary == true and data.lastStand.hp > 0"
    },
    {
      "type": "text",
      "value": "{{data.lastStand.behavior}}",
      "style": "body",
      "visibleIf": "data.isLegendary == true and data.lastStand.hp > 0"
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "descr != ''"
    },
    {
      "type": "text",
      "value": "{{descr}}",
      "style": "body",
      "visibleIf": "descr != ''"
    },
    {
      "type": "image",
      "value": "{{image}}",
      "link": "{{image}}",
      "visibleIf": "image != ''"
    },
    {
      "type": "tags",
      "attribute": "tags"
    }
  ]
}
