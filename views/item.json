{
  "type": "vStack",
  "spacing": 16,
  "views": [
    {
      "type": "hStack",
      "spacing": 12,
      "views": [
        {
          "type": "vStack",
          "spacing": 4,
          "alignment": "leading",
          "views": [
            {
              "type": "text",
              "value": "{{name}}",
              "style": "largeTitle",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "{{data.itemType|default: 'Item'}}",
              "style": "headline",
              "color": "secondary"
            }
          ]
        },
        {
          "type": "spacer"
        },
        {
          "type": "vStack",
          "spacing": 4,
          "alignment": "center",
          "padding": 12,
          "backgroundColor": "systemGray6",
          "cornerRadius": 8,
          "views": [
            {
              "type": "text",
              "value": "{{data.quantity|default: '1'}}",
              "style": "title",
              "weight": "bold"
            },
            {
              "type": "text",
              "value": "Qty",
              "style": "caption",
              "color": "secondary"
            }
          ]
        }
      ]
    },
    {
      "type": "hStack",
      "spacing": 8,
      "views": [
        {
          "type": "text",
          "value": "Common",
          "style": "caption",
          "weight": "semibold",
          "padding": 6,
          "backgroundColor": "systemGray",
          "cornerRadius": 4,
          "color": "white",
          "visibleIf": "data.rarity == 'common'"
        },
        {
          "type": "text",
          "value": "Uncommon",
          "style": "caption",
          "weight": "semibold",
          "padding": 6,
          "backgroundColor": "systemGreen",
          "cornerRadius": 4,
          "color": "white",
          "visibleIf": "data.rarity == 'uncommon'"
        },
        {
          "type": "text",
          "value": "Rare",
          "style": "caption",
          "weight": "semibold",
          "padding": 6,
          "backgroundColor": "systemBlue",
          "cornerRadius": 4,
          "color": "white",
          "visibleIf": "data.rarity == 'rare'"
        },
        {
          "type": "text",
          "value": "Very Rare",
          "style": "caption",
          "weight": "semibold",
          "padding": 6,
          "backgroundColor": "systemPurple",
          "cornerRadius": 4,
          "color": "white",
          "visibleIf": "data.rarity == 'very-rare'"
        },
        {
          "type": "text",
          "value": "Legendary",
          "style": "caption",
          "weight": "semibold",
          "padding": 6,
          "backgroundColor": "systemOrange",
          "cornerRadius": 4,
          "color": "white",
          "visibleIf": "data.rarity == 'legendary'"
        },
        {
          "type": "text",
          "value": "Artifact",
          "style": "caption",
          "weight": "semibold",
          "padding": 6,
          "backgroundColor": "systemRed",
          "cornerRadius": 4,
          "color": "white",
          "visibleIf": "data.rarity == 'artifact'"
        },
        {
          "type": "text",
          "value": "Consumable",
          "style": "caption",
          "weight": "semibold",
          "padding": 6,
          "backgroundColor": "systemTeal",
          "cornerRadius": 4,
          "color": "white",
          "visibleIf": "data.consumable == true"
        },
        {
          "type": "text",
          "value": "Attunement",
          "style": "caption",
          "weight": "semibold",
          "padding": 6,
          "backgroundColor": "systemIndigo",
          "cornerRadius": 4,
          "color": "white",
          "visibleIf": "data.attunement == true"
        }
      ]
    },
    {
      "type": "divider"
    },
    {
      "type": "hStack",
      "spacing": 12,
      "distribution": "fillEqually",
      "views": [
        {
          "type": "vStack",
          "spacing": 4,
          "alignment": "center",
          "padding": 10,
          "backgroundColor": "systemGray6",
          "cornerRadius": 8,
          "views": [
            {
              "type": "text",
              "value": "{{data.weight|default: '0'}} lbs",
              "style": "body",
              "weight": "semibold"
            },
            {
              "type": "text",
              "value": "Weight",
              "style": "caption",
              "color": "secondary"
            }
          ]
        },
        {
          "type": "vStack",
          "spacing": 4,
          "alignment": "center",
          "padding": 10,
          "backgroundColor": "systemGray6",
          "cornerRadius": 8,
          "views": [
            {
              "type": "text",
              "value": "{{data.value|default: '0'}} sp",
              "style": "body",
              "weight": "semibold"
            },
            {
              "type": "text",
              "value": "Value",
              "style": "caption",
              "color": "secondary"
            }
          ]
        },
        {
          "type": "vStack",
          "spacing": 4,
          "alignment": "center",
          "padding": 10,
          "backgroundColor": "systemBlue",
          "cornerRadius": 8,
          "views": [
            {
              "type": "text",
              "value": "{{data.charges.current|default: '0'}} / {{data.charges.max|default: '0'}}",
              "style": "body",
              "weight": "semibold",
              "color": "white"
            },
            {
              "type": "text",
              "value": "Charges",
              "style": "caption",
              "color": "white"
            }
          ],
          "visibleIf": "data.charges.max > 0"
        }
      ]
    },
    {
      "type": "text",
      "value": "Recharge: {{data.recharge}}",
      "style": "caption",
      "color": "secondary",
      "visibleIf": "data.recharge != ''"
    },
    {
      "type": "text",
      "value": "Requires Attunement: {{data.attunementRequirements}}",
      "style": "caption",
      "color": "secondary",
      "visibleIf": "data.attunement == true"
    },
    {
      "type": "divider"
    },
    {
      "type": "vStack",
      "spacing": 8,
      "views": [
        {
          "type": "text",
          "value": "Description",
          "style": "headline",
          "weight": "bold"
        },
        {
          "type": "text",
          "value": "{{descr|default: 'No description provided.'}}",
          "style": "body"
        }
      ]
    },
    {
      "type": "vStack",
      "spacing": 8,
      "padding": 12,
      "backgroundColor": "systemGreen",
      "cornerRadius": 8,
      "views": [
        {
          "type": "hStack",
          "views": [
            {
              "type": "text",
              "value": "Effect",
              "style": "headline",
              "weight": "bold",
              "color": "white"
            },
            {
              "type": "spacer"
            },
            {
              "type": "text",
              "value": "{{data.activation}}",
              "style": "caption",
              "weight": "semibold",
              "color": "white",
              "visibleIf": "data.activation != ''"
            }
          ]
        },
        {
          "type": "text",
          "value": "{{data.effect}}",
          "style": "body",
          "color": "white"
        }
      ],
      "visibleIf": "data.effect != ''"
    },
    {
      "type": "vStack",
      "spacing": 8,
      "views": [
        {
          "type": "text",
          "value": "Notes",
          "style": "headline",
          "weight": "bold"
        },
        {
          "type": "text",
          "value": "{{data.notes}}",
          "style": "body",
          "color": "secondary"
        }
      ],
      "visibleIf": "data.notes != ''"
    }
  ]
}
