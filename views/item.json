{
  "debug": false,
  "spacing": 12,
  "padding": [20, 20, 20, 20],
  "footer": true,
  "images": true,
  "views": [
    {
      "type": "text",
      "value": "{{name|uppercase}}",
      "style": "title3",
      "weight": "black",
      "alignment": "center",
      "bgColor": "black",
      "color": "white",
      "padding": [8, 12]
    },
    {
      "type": "text",
      "value": "{{data.shortDescription}}",
      "style": "subheadline",
      "alignment": "center",
      "visibleIf": "data.shortDescription != ''"
    },
    {
      "type": "include",
      "path": "partials/item.md"
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "descr != ''"
    },
    {
      "type": "text",
      "value": "{{descr}}",
      "style": "body",
      "visibleIf": "descr != ''"
    },
    {
      "type": "divider",
      "height": 1,
      "bgColor": "black",
      "visibleIf": "data.effect != ''"
    },
    {
      "type": "text",
      "value": "EFFECT{% if data.activation != '' %} ({{data.activation}}){% endif %}",
      "style": "caption",
      "weight": "black",
      "visibleIf": "data.effect != ''"
    },
    {
      "type": "text",
      "value": "{{data.effect}}",
      "style": "body",
      "visibleIf": "data.effect != ''"
    },
    {
      "type": "text",
      "value": "{{notes}}",
      "style": "caption",
      "visibleIf": "notes != ''"
    },
    {
      "type": "image",
      "value": "{{image}}",
      "link": "{{image}}",
      "visibleIf": "image != ''"
    },
    {
      "type": "tags",
      "attribute": "tags"
    }
  ]
}
