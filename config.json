{
  "entities": {
    "default": {
      "detail": "",
      "tokenImage": "images/icon.jpg",
      "isPlayerControlled": false,
      "defeatedWhenHpDropsToZero": true,
      "bars": [
        {
          "label": "HP",
          "maxValue": "{{data.hp.max}}",
          "value": "{{data.hp.current}}"
        }
      ]
    },
    "character": {
      "detail": "{{data.ancestry.name|default: 'Unknown Ancestry'}} {{data.class.name|default: 'Unknown Class'}} {{data.level|default: '1'}}",
      "tokenImage": "{{image}}",
      "isPlayerControlled": true,
      "defeatedWhenHpDropsToZero": true,
      "role": "friendly",
      "collection": {
        "detail": "Level {{data.level|default: '1'}} • {{data.class.name|default: 'Unknown Class'}}"
      },
      "combatant": {
        "initiative": "{{data.initiative|default: '0'}}",
        "ac": "{{data.ac.value|default: '10'}}",
        "bars": [
          {
            "attribute": "data.hp",
            "title": "Hit Points",
            "temporary": true
          }
        ]
      },
      "bars": [
        {
          "label": "HP",
          "maxValue": "{{data.hp.max}}",
          "value": "{{data.hp.current}}"
        }
      ]
    },
    "monster": {
      "detail": "{{data.size|default: 'Medium'|map: 'Size'}} {{data.type|default: 'Humanoid'|map: 'MonsterType'}} • CR {{data.cr|default: '1'}}",
      "tokenImage": "{{image}}",
      "isPlayerControlled": false,
      "defeatedWhenHpDropsToZero": true,
      "role": "hostile",
      "collection": {
        "detail": "CR {{data.cr|default: '1'}} • {{data.type|default: 'Humanoid'|map: 'MonsterType'}}"
      },
      "combatant": {
        "initiative": "{{data.abilities.dex.modifier|default: '0'}}",
        "ac": "{{data.ac.value|default: '10'}}",
        "bars": [
          {
            "attribute": "data.hp",
            "title": "Hit Points",
            "temporary": false
          }
        ]
      },
      "bars": [
        {
          "label": "HP",
          "maxValue": "{{data.hp.max}}",
          "value": "{{data.hp.current}}"
        }
      ]
    },
    "npc": {
      "detail": "{{data.size|default: 'Medium'|map: 'Size'}} {{data.type|default: 'Humanoid'|map: 'MonsterType'}}",
      "tokenImage": "{{image}}",
      "isPlayerControlled": false,
      "defeatedWhenHpDropsToZero": true,
      "role": "neutral",
      "collection": {
        "detail": "{{data.type|default: 'Humanoid'|map: 'MonsterType'}}"
      },
      "combatant": {
        "initiative": "{{data.abilities.dex.modifier|default: '0'}}",
        "ac": "{{data.ac.value|default: '10'}}",
        "bars": [
          {
            "attribute": "data.hp",
            "title": "Hit Points",
            "temporary": false
          }
        ]
      },
      "bars": [
        {
          "label": "HP",
          "maxValue": "{{data.hp.max}}",
          "value": "{{data.hp.current}}"
        }
      ]
    },
    "spell": {
      "detail": "{% if data.level == '0' %}{{data.school|map: 'SpellSchool'}} cantrip{% else %}{{data.level|map: 'SpellLevel'}} {{data.school|map: 'SpellSchool'}}{% endif %}"
    },
    "weapon": {
      "detail": "{{data.damage}} {{data.damageType|titlecase}} damage"
    },
    "armor": {
      "detail": "Armor {{data.armor}}"
    },
    "item": {
      "detail": "{{data.type|titlecase}}"
    }
  },
  "statusEffects": [
    {
      "provider": "Rule:condition"
    }
  ],
  "measurements": {
    "default": {
      "distance": {
        "unit": "spaces",
        "format": "@value @unit"
      },
      "weight": {
        "unit": "lb",
        "format": "@value @unit."
      },
      "speed": {
        "unit": "spaces",
        "format": "@value"
      }
    },
    "metric": {
      "distance": {
        "unit": "m",
        "format": "@value @unit",
        "convert": {
          "spaces": "@value * 1.5"
        }
      },
      "weight": {
        "unit": "kg",
        "format": "@value @unit",
        "convert": {
          "lb": "@value * 0.5"
        }
      },
      "speed": {
        "unit": "m",
        "format": "@value",
        "convert": {
          "spaces": "@value * 1.5"
        }
      }
    }
  }
}
