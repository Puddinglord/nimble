{
  "title": "Item",
  "sections": [
    {
      "title": "Basic Information",
      "type": "group",
      "fields": [
        {
          "title": "Item Name",
          "type": "text",
          "attribute": "name",
          "placeholder": "Enter item name"
        },
        {
          "title": "Item Type",
          "type": "picker",
          "attribute": "data.itemType",
          "attributeType": "ItemType"
        },
        {
          "title": "Rarity",
          "type": "picker",
          "attribute": "data.rarity",
          "attributeType": "ItemRarity"
        },
        {
          "title": "Description",
          "type": "textArea",
          "attribute": "descr",
          "placeholder": "Item description"
        }
      ]
    },
    {
      "title": "Weapon Properties",
      "type": "group",
      "visibleIf": "data.itemType == 'melee-weapon' || data.itemType == 'ranged-weapon'",
      "fields": [
        {
          "title": "Damage Dice",
          "type": "text",
          "attribute": "data.damage.dice",
          "placeholder": "e.g., 1d8"
        },
        {
          "title": "Damage Type",
          "type": "picker",
          "attribute": "data.damage.type",
          "attributeType": "DamageType"
        },
        {
          "title": "Bonus Damage",
          "type": "text",
          "attribute": "data.damage.bonus",
          "placeholder": "e.g., +1d6 fire"
        },
        {
          "title": "Attack Stat",
          "type": "picker",
          "attribute": "data.attackStat",
          "attributeType": "Ability"
        },
        {
          "title": "Magic Bonus",
          "type": "number",
          "attribute": "data.magicBonus",
          "placeholder": "0"
        },
        {
          "title": "Range (ft)",
          "type": "number",
          "attribute": "data.range",
          "placeholder": "For ranged/thrown weapons"
        },
        {
          "title": "Light",
          "type": "toggle",
          "attribute": "data.properties.light"
        },
        {
          "title": "Two-Handed",
          "type": "toggle",
          "attribute": "data.properties.twoHanded"
        },
        {
          "title": "Versatile",
          "type": "toggle",
          "attribute": "data.properties.versatile"
        },
        {
          "title": "Versatile Damage",
          "type": "text",
          "attribute": "data.properties.versatileDamage",
          "placeholder": "e.g., 1d10",
          "visibleIf": "data.properties.versatile == true"
        },
        {
          "title": "Finesse",
          "type": "toggle",
          "attribute": "data.properties.finesse"
        },
        {
          "title": "Thrown",
          "type": "toggle",
          "attribute": "data.properties.thrown"
        },
        {
          "title": "Vicious",
          "type": "toggle",
          "attribute": "data.properties.vicious"
        },
        {
          "title": "Reach",
          "type": "toggle",
          "attribute": "data.properties.reach"
        },
        {
          "title": "Loading",
          "type": "toggle",
          "attribute": "data.properties.loading"
        },
        {
          "title": "Mounted",
          "type": "toggle",
          "attribute": "data.properties.mounted"
        }
      ]
    },
    {
      "title": "Armor Properties",
      "type": "group",
      "visibleIf": "data.itemType == 'cloth' || data.itemType == 'leather' || data.itemType == 'mail' || data.itemType == 'plate' || data.itemType == 'shield'",
      "fields": [
        {
          "title": "Defense Bonus",
          "type": "number",
          "attribute": "data.defenseBonus",
          "placeholder": "0"
        },
        {
          "title": "Magic Bonus",
          "type": "number",
          "attribute": "data.magicBonus",
          "placeholder": "0"
        },
        {
          "title": "DEX Limit",
          "type": "picker",
          "attribute": "data.dexLimit",
          "attributeType": "DexLimit"
        },
        {
          "title": "Stealth Disadvantage",
          "type": "toggle",
          "attribute": "data.stealthDisadvantage"
        },
        {
          "title": "Strength Requirement",
          "type": "number",
          "attribute": "data.strRequirement",
          "placeholder": "0"
        }
      ]
    },
    {
      "title": "Physical Properties",
      "type": "group",
      "fields": [
        {
          "title": "Weight (lbs)",
          "type": "number",
          "attribute": "data.weight",
          "placeholder": "0"
        },
        {
          "title": "Value (silver)",
          "type": "number",
          "attribute": "data.value",
          "placeholder": "0"
        },
        {
          "title": "Quantity",
          "type": "number",
          "attribute": "data.quantity",
          "placeholder": "1"
        },
        {
          "title": "Stackable",
          "type": "toggle",
          "attribute": "data.stackable"
        }
      ]
    },
    {
      "title": "Usage",
      "type": "group",
      "fields": [
        {
          "title": "Consumable",
          "type": "toggle",
          "attribute": "data.consumable"
        },
        {
          "title": "Charges",
          "type": "number",
          "attribute": "data.charges.current",
          "placeholder": "0"
        },
        {
          "title": "Max Charges",
          "type": "number",
          "attribute": "data.charges.max",
          "placeholder": "0"
        },
        {
          "title": "Recharge",
          "type": "text",
          "attribute": "data.recharge",
          "placeholder": "e.g., Dawn, Short Rest"
        },
        {
          "title": "Attunement Required",
          "type": "toggle",
          "attribute": "data.attunement"
        },
        {
          "title": "Attunement Requirements",
          "type": "text",
          "attribute": "data.attunementRequirements",
          "placeholder": "e.g., Spellcaster",
          "visibleIf": "data.attunement == true"
        }
      ]
    },
    {
      "title": "Effects",
      "type": "group",
      "fields": [
        {
          "title": "Effect",
          "type": "textArea",
          "attribute": "data.effect",
          "placeholder": "What does this item do when used?"
        },
        {
          "title": "Activation",
          "type": "text",
          "attribute": "data.activation",
          "placeholder": "e.g., Action, Bonus Action"
        }
      ]
    }
  ]
}
