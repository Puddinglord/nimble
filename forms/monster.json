{
  "title": "Monster / NPC",
  "sections": [
    {
      "title": "Basic Information",
      "type": "group",
      "fields": [
        {
          "title": "Name",
          "type": "text",
          "attribute": "name",
          "placeholder": "Monster or NPC name"
        },
        {
          "title": "Type",
          "type": "picker",
          "attribute": "data.type",
          "attributeType": "MonsterType"
        },
        {
          "title": "Size",
          "type": "picker",
          "attribute": "data.size",
          "attributeType": "Size"
        },
        {
          "title": "Challenge Rating",
          "type": "picker",
          "attribute": "data.cr",
          "attributeType": "ChallengeRating"
        },
        {
          "title": "XP Value",
          "type": "number",
          "attribute": "data.xp",
          "placeholder": "0"
        },
        {
          "title": "Alignment",
          "type": "text",
          "attribute": "data.alignment",
          "placeholder": "Neutral, Chaotic Evil, etc."
        },
        {
          "title": "Description",
          "type": "textArea",
          "attribute": "descr",
          "placeholder": "Brief flavor text (1-2 sentences)"
        }
      ]
    },
    {
      "title": "Abilities",
      "type": "group",
      "fields": [
        {
          "title": "Strength",
          "type": "number",
          "attribute": "data.abilities.str",
          "placeholder": "0"
        },
        {
          "title": "Dexterity",
          "type": "number",
          "attribute": "data.abilities.dex",
          "placeholder": "0"
        },
        {
          "title": "Intelligence",
          "type": "number",
          "attribute": "data.abilities.int",
          "placeholder": "0"
        },
        {
          "title": "Will",
          "type": "number",
          "attribute": "data.abilities.wil",
          "placeholder": "0"
        }
      ]
    },
    {
      "title": "Stats",
      "type": "group",
      "fields": [
        {
          "title": "HP",
          "type": "number",
          "attribute": "data.hp.max",
          "placeholder": "0"
        },
        {
          "title": "Fly Speed (0 = no flight)",
          "type": "number",
          "attribute": "data.movement.fly",
          "placeholder": "0"
        }
      ]
    },
    {
      "title": "Abilities & Actions",
      "type": "group",
      "fields": [
        {
          "title": "Special Traits",
          "type": "textArea",
          "attribute": "data.traits",
          "placeholder": "Bold text for passive abilities (e.g., Brittle Bones. Resistant to piercing, vulnerable to bludgeoning.)"
        },
        {
          "title": "Actions",
          "type": "textArea",
          "attribute": "data.actions",
          "placeholder": "Use bullet points:\n• Action Name. (Type) 1d4+8. Description.\n• Another Action (2×). 1d4+10. Description."
        }
      ]
    },
    {
      "title": "Last Stand",
      "type": "group",
      "fields": [
        {
          "title": "Last Stand Actions",
          "type": "textArea",
          "attribute": "data.legendary.actions",
          "placeholder": "Special actions when creature reaches 0 HP. Use bullet points:\n• Action Name. Description of what happens."
        }
      ]
    }
  ]
}
