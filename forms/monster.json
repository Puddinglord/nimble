{
  "title": "Monster / NPC",
  "sections": [
    {
      "title": "Basic Information",
      "type": "group",
      "fields": [
        {
          "title": "Size",
          "type": "picker",
          "attribute": "data.size",
          "attributeType": "Size"
        },
        {
          "title": "Level",
          "type": "picker",
          "attribute": "data.level",
          "attributeType": "MonsterLevel"
        },
        {
          "title": "Description",
          "type": "textArea",
          "attribute": "descr",
          "placeholder": "Brief flavor text (1-2 sentences)"
        }
      ]
    },
    {
      "title": "Armor & Hit Points",
      "type": "group",
      "fields": [
        {
          "title": "Armor Type (affects damage taken)",
          "type": "picker",
          "attribute": "data.armor",
          "attributeType": "MonsterArmor"
        },
        {
          "title": "Hit Points",
          "type": "number",
          "attribute": "data.hp.max",
          "placeholder": "0"
        },
        {
          "title": "Current HP",
          "type": "number",
          "attribute": "data.hp.current",
          "placeholder": "0"
        }
      ]
    },
    {
      "title": "Movement",
      "type": "group",
      "fields": [
        {
          "title": "Speed",
          "type": "number",
          "attribute": "data.movement.speed",
          "placeholder": "6"
        },
        {
          "title": "Type",
          "type": "picker",
          "attribute": "data.movement.type",
          "attributeType": "MovementType"
        }
      ]
    },

    {
      "title": "Traits & Abilities",
      "type": "group",
      "fields": [
        {
          "title": "Special Traits",
          "type": "textArea",
          "attribute": "data.traits",
          "placeholder": "**Trait Name.** Description of the passive ability.\n\n**Another Trait.** Another description."
        }
      ]
    },
    {
      "title": "Action Frequency",
      "type": "group",
      "fields": [
        {
          "title": "Action Frequency",
          "type": "text",
          "attribute": "data.actionFrequency",
          "placeholder": "e.g., Choose 1, Choose 2, etc."
        }
      ]
    },
    {
      "title": "Actions",
      "type": "list",
      "attribute": "data.actions",
      "form": {
        "title": "Action",
        "sections": [
          {
            "type": "group",
            "fields": [
              {
                "placeholder": "Name",
                "attribute": "name"
              },
              {
                "title": "Description",
                "type": "textArea",
                "attribute": "text"
              }
            ]
          }
        ]
      }
    },

    {
      "title": "Legendary Creature",
      "type": "group",
      "fields": [
        {
          "title": "Is Legendary",
          "type": "toggle",
          "attribute": "data.isLegendary"
        },
        {
          "title": "Saves",
          "type": "text",
          "attribute": "data.saves",
          "placeholder": "e.g., STR++, WIL-",
          "visibleIf": "data.isLegendary == true"
        },
        {
          "title": "Legendary Actions",
          "type": "list",
          "attribute": "data.legendaryActions",
          "visibleIf": "data.isLegendary == true",
          "form": {
            "title": "Legendary Action",
            "sections": [
              {
                "type": "group",
                "fields": [
                  {
                    "placeholder": "Name",
                    "attribute": "name"
                  },
                  {
                    "title": "Description",
                    "type": "textArea",
                    "attribute": "text"
                  }
                ]
              }
            ]
          }
        }
      ]
    },
    {
      "title": "Bloodied State (50% HP)",
      "type": "group",
      "fields": [
        {
          "title": "Bloodied Threshold",
          "type": "number",
          "attribute": "data.bloodied.threshold",
          "placeholder": "Half of max HP",
          "visibleIf": "data.isLegendary == true"
        },
        {
          "title": "Bloodied Abilities",
          "type": "textArea",
          "attribute": "data.bloodied.abilities",
          "placeholder": "When bloodied, the creature gains:\n\n**Desperate Fury.** Attack damage increases by 1d6.",
          "visibleIf": "data.isLegendary == true"
        }
      ]
    },
    {
      "title": "Last Stand (0 HP)",
      "type": "group",
      "fields": [
        {
          "title": "Last Stand HP",
          "type": "number",
          "attribute": "data.lastStand.hp",
          "placeholder": "0",
          "visibleIf": "data.isLegendary == true"
        },
        {
          "title": "Last Stand Behavior",
          "type": "textArea",
          "attribute": "data.lastStand.behavior",
          "placeholder": "When reduced to 0 HP, the creature enters Last Stand with a separate HP pool. Describe behavior changes:\n\nThe dragon becomes reckless, making all-out attacks regardless of its own safety.",
          "visibleIf": "data.isLegendary == true"
        }
      ]
    },
    {
      "title": "Loot & Rewards",
      "type": "group",
      "fields": [
        {
          "title": "Treasure",
          "type": "textArea",
          "attribute": "data.treasure",
          "placeholder": "25 silver, rusty dagger, mysterious amulet"
        }
      ]
    }
  ]
}
